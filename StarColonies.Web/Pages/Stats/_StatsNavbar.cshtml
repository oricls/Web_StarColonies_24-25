@{
    var currentPath = Context.Request.Path.Value?.ToLower();
}
<nav class="navbar navbar-expand-lg navbar-dark mb-4" style="background-color: var(--quaternary-bg-color); border-bottom: 1px solid rgba(255,255,255,0.1);">
    <div class="container">
        <span class="navbar-brand font-barlow fw-bold">
            <i class="fas fa-chart-line me-2 text-primary"></i>STATISTIQUES
        </span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#statsNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="statsNavbar">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link @(currentPath != null && (currentPath.EndsWith("/stats") || currentPath.EndsWith("/stats/index")) ? "active" : "")" asp-page="/Stats/Index">
                        <i class="fas fa-chart-bar me-1"></i> Équipe
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentPath != null && currentPath.Contains("/stats/missions") ? "active" : "")" asp-page="/Stats/Missions">
                        <i class="fas fa-bullseye me-1"></i> Missions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentPath != null && currentPath.Contains("/stats/colons") ? "active" : "")" asp-page="/Stats/Colons">
                        <i class="fas fa-user-astronaut me-1"></i> Colons
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>