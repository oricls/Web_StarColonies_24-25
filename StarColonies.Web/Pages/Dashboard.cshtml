@page
@model StarColonies.Web.Pages.Dashboard

@{
    ViewData["Title"] = "Tableau de bord";
}

<div class="container-fluid py-4">
    <!-- Section Mes équipes -->
    <section class="mb-5">
        <h2 class="font-barlow text-white fw-bold mb-4">Mes équipes</h2>

        <div class="row g-4">
            <!-- Équipe Alpha striker -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 rounded-3 shadow" style="background: linear-gradient(to bottom, #1D1332, #3A2463); border: 1px solid #6751A3;">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <img src="https://picsum.photos/50/50" alt="Avatar Alpha striker" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                            </div>
                            <div>
                                <h5 class="font-barlow text-white fw-bold mb-0">Alpha striker</h5>
                                <div class="d-flex align-items-center text-success small">
                                    <span>Sélectionnée pour les missions</span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="bg-quaternary-bg-color p-3 rounded text-center">
                                    <h3 class="font-barlow text-white mb-0">7</h3>
                                    <small class="text-white-50">Membres</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-quaternary-bg-color p-3 rounded text-center">
                                    <h3 class="font-barlow text-white mb-0">2</h3>
                                    <small class="text-white-50">Niveau moyen</small>
                                </div>
                            </div>
                        </div>

                        <p class="small text-white mb-3">Composition :</p>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-danger rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <span class="text-white fw-bold">S</span>
                            </div>
                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <span class="text-white fw-bold">M</span>
                            </div>
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <span class="text-white fw-bold">O</span>
                            </div>
                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <span class="text-white fw-bold">M</span>
                            </div>
                            <div class="text-white fw-bold">+3</div>
                        </div>

                        <button class="btn btn-purple w-100">CONSULTER</button>
                    </div>
                </div>
            </div>

            <!-- Équipe John doe's -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 rounded-3 shadow" style="background: linear-gradient(to bottom, #1D1332, #3A2463); border: 1px solid #6751A3;">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <img src="https://picsum.photos/50/50?random=2" alt="Avatar John doe's" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                            </div>
                            <div>
                                <h5 class="font-barlow text-white fw-bold mb-0">John doe's</h5>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="bg-quaternary-bg-color p-3 rounded text-center">
                                    <h3 class="font-barlow text-white mb-0">1</h3>
                                    <small class="text-white-50">Membres</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-quaternary-bg-color p-3 rounded text-center">
                                    <h3 class="font-barlow text-white mb-0">99</h3>
                                    <small class="text-white-50">Niveau moyen</small>
                                </div>
                            </div>
                        </div>

                        <p class="small text-white mb-3">Composition :</p>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <span class="text-white fw-bold">S</span>
                            </div>
                        </div>

                        <button class="btn btn-purple w-100">CONSULTER</button>
                    </div>
                </div>
            </div>

            <!-- Nouvelle équipe -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 rounded-3 shadow d-flex align-items-center justify-content-center" style="background: linear-gradient(to bottom, #1D1332, #3A2463); border: 1px solid #6751A3;">
                    <div class="text-center p-5">
                        <div class="rounded-circle border border-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 70px; height: 70px;">
                            <i class="fas fa-plus text-white fa-2x"></i>
                        </div>
                        <h5 class="font-barlow text-white fw-bold">Nouvelle équipe</h5>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Missions suggérées -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="font-barlow text-white fw-bold mb-0">Missions suggérées</h2>
            <a href="#" class="btn btn-purple">Voir tous</a>
        </div>

        <div class="row g-4">
            @foreach (var mission in Model.SuggestedMissions)
            {
                <div class="col-md-6">
                    <div class="card h-100 rounded-3 shadow" style="background: linear-gradient(to bottom, #1D1332, #3A2463); border: 1px solid #6751A3;">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h3 class="font-barlow text-white fw-bold mb-0">@mission.Name</h3>
                                <div class="bg-primary px-3 py-1 rounded">
                                    <span class="text-white fw-bold">Nv. @mission.Level</span>
                                </div>
                            </div>

                            <p class="h6 opacity-75 text-white mb-4">@mission.Description</p>

                            <div class="mb-4">
                                <h4 class="font-barlow text-white mb-2">Monstres présents :</h4>
                                <div class="d-flex">
                                    @foreach (var bestiaire in mission.BestiaireIcons)
                                    {
                                        <div class="me-2">
                                            <img class="bg-primary rounded-circle d-flex align-items-center justify-content-center"
                                                 style="width: 40px; height: 40px; object-fit: cover;"
                                                 src="@bestiaire.Avatar"
                                                 alt="@bestiaire.Name"
                                                 title="@bestiaire.Name (@bestiaire.TypeName)" />
                                        </div>
                                    }
                                </div>
                            </div>

                            <a href="@mission.Target" class="btn btn-warning w-100 text-dark fw-bold mt-auto">CONSULTER LA MISSION</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@section Styles {
    <style>

        /* Style pour l'arrière-plan quaternaire (comme dans la page Comptoir) */
        .bg-quaternary-bg-color {
            background-color: var(--quaternary-bg-color);
        }
        
    </style>
}