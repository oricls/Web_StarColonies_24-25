@page
@model StarColonies.Web.Pages.Dashboard

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Mes équipes section -->
    <section class="mb-5">
        <h2 class="font-barlow fw-bold text-warning mb-4">Mes équipes</h2>

        <div class="row g-4">
            <!-- Équipe Alpha striker -->
            <div class="col-lg-4 col-md-6">
                <div class="card bg-dark h-100 border-0 shadow">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start mb-3">
                            <div class="me-3" style="width: 50px;">
                                <img src="https://picsum.photos/seed/team1/50" alt="Alpha striker" class="img-fluid rounded-circle">
                            </div>
                            <div>
                                <h3 class="h5 fw-bold mb-1">Alpha striker</h3>
                                <p class="text-success mb-0 small">Sélectionnée pour les missions</p>
                            </div>
                        </div>

                        <div class="row text-center py-2 mb-3 bg-black bg-opacity-25 mx-0">
                            <div class="col-6 border-end border-secondary">
                                <h4 class="h3 fw-bold mb-0">7</h4>
                                <small class="text-muted">Membres</small>
                            </div>
                            <div class="col-6">
                                <h4 class="h3 fw-bold mb-0">2</h4>
                                <small class="text-muted">Niveau moyen</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <p class="text-muted small mb-2">Compositions :</p>
                            <div class="d-flex gap-2">
                                <span class="badge rounded-circle bg-danger d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">S</span>
                                <span class="badge rounded-circle bg-success d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">M</span>
                                <span class="badge rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">O</span>
                                <span class="badge rounded-circle bg-warning d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">Y</span>
                                <span class="badge bg-secondary px-2 rounded-pill">+3</span>
                            </div>
                        </div>

                        <button class="btn btn-purple w-100 mt-auto font-barlow fw-bold">CONSULTER</button>
                    </div>
                </div>
            </div>

            <!-- Équipe John doe's -->
            <div class="col-lg-4 col-md-6">
                <div class="card bg-dark h-100 border-0 shadow">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start mb-3">
                            <div class="me-3" style="width: 50px;">
                                <img src="https://picsum.photos/seed/team2/50" alt="John doe's" class="img-fluid rounded-circle">
                            </div>
                            <div>
                                <h3 class="h5 fw-bold mb-1">John doe's</h3>
                            </div>
                        </div>

                        <div class="row text-center py-2 mb-3 bg-black bg-opacity-25 mx-0">
                            <div class="col-6 border-end border-secondary">
                                <h4 class="h3 fw-bold mb-0">1</h4>
                                <small class="text-muted">Membres</small>
                            </div>
                            <div class="col-6">
                                <h4 class="h3 fw-bold mb-0">99</h4>
                                <small class="text-muted">Niveau moyen</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <p class="text-muted small mb-2">Compositions :</p>
                            <div class="d-flex gap-2">
                                <span class="badge rounded-circle bg-danger d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">S</span>
                            </div>
                        </div>

                        <button class="btn btn-purple w-100 mt-auto font-barlow fw-bold">CONSULTER</button>
                    </div>
                </div>
            </div>

            <!-- Nouvelle équipe -->
            <div class="col-lg-4 col-md-6">
                <div class="card bg-dark bg-opacity-50 h-100 border-0 border-dashed border-white border-opacity-25 d-flex align-items-center justify-content-center text-center p-4">
                    <div>
                        <div class="bg-dark bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-plus fs-1"></i>
                        </div>
                        <h3 class="h5 fw-bold">Nouvelle équipe</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Missions suggérées section -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="font-barlow fw-bold text-warning mb-0">Missions suggérées</h2>
            <a href="#" class="btn btn-sm btn-dark text-white">Voir tous</a>
        </div>

        <div class="row g-4">
            <!-- Mission 1 -->
            <div class="col-xl-6">
                <div class="card bg-dark h-100 border-0 shadow overflow-hidden">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <div>
                                <h3 class="h5 fw-bold mb-2">Exploration de la base abandonnée</h3>
                                <p class="text-muted small mb-4">
                                    Explorer une ancienne base spatiale abandonnée et découvrir pourquoi ses occupants ont disparu. Attention aux systèmes de défense automatisés et aux anomalies spatiales.
                                </p>
                            </div>
                            <div class="ms-2">
                                <span class="badge bg-purple px-2 py-1">Nv. 12</span>
                            </div>
                        </div>

                        <div>
                            <p class="text-muted small mb-2">Monstres présents :</p>
                            <div class="d-flex gap-2">
                                <div class="monster-icon">
                                    <i class="fas fa-dragon text-primary"></i>
                                </div>
                                <div class="monster-icon">
                                    <i class="fas fa-skull text-danger"></i>
                                </div>
                                <div class="monster-icon">
                                    <i class="fas fa-ghost text-info"></i>
                                </div>
                                <div class="monster-icon">
                                    <i class="fas fa-paw text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-0">
                        <button class="btn btn-warning w-100 py-3 fw-bold font-barlow text-dark">CONSULTER LA MISSION</button>
                    </div>
                </div>
            </div>

            <!-- Mission 2 -->
            <div class="col-xl-6">
                <div class="card bg-dark h-100 border-0 shadow overflow-hidden">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <div>
                                <h3 class="h5 fw-bold mb-2">Récupération de technologie alien</h3>
                                <p class="text-muted small mb-4">
                                    Infiltrer un avant-poste extraterrestre pour récupérer des technologies avancées. La mission nécessite discrétion et rapidité d'exécution.
                                </p>
                            </div>
                            <div class="ms-2">
                                <span class="badge bg-purple px-2 py-1">Nv. 4</span>
                            </div>
                        </div>

                        <div>
                            <p class="text-muted small mb-2">Monstres présents :</p>
                            <div class="d-flex gap-2">
                                <div class="monster-icon">
                                    <i class="fas fa-eye text-primary"></i>
                                </div>
                                <div class="monster-icon">
                                    <i class="fas fa-hand-paper text-danger"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-0">
                        <button class="btn btn-warning w-100 py-3 fw-bold font-barlow text-dark">CONSULTER LA MISSION</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>