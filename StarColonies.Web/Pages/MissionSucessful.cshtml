@page
@model StarColonies.Web.Pages.MissionSucessful

<div class="container text-center mt-5">
    <i class="fas fa-trophy" style="font-size: 5rem; color: var(--primary-color);"></i>
    <h1 class="display-4 fw-bold mt-4">Mission RÃ©ussie !</h1>
    <p class="lead">@Model.RewardModel.MissionName</p>

    @foreach (var colon in Model.RewardModel.ColonRewards)
    {
        <div class="card mb-4">
            <div class="card-header bg-dark">
                <h3>@colon.ColonName</h3>
                @if (colon.LevelGained)
                {
                    <span class="badge bg-success">Niveau + @Model.Levels</span>
                }
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-center flex-wrap">
                    @foreach (var resource in colon.Resources)
                    {
                        <div class="m-2 text-center">
                            <img src="~/@resource.Icon" alt="@resource.ResourceName"
                                 style="width: 2rem; height: 2rem; color: @resource.Color;" />
                            <div class="mt-1">
                                <span>@resource.ResourceName</span>
                                <span class="badge bg-primary ms-1">+@resource.Quantity</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Dashboard" class="btn btn-primary btn-lg">
            Retour au tableau de bord
        </a>
    </div>
</div>

@section Styles {
    <style>
    .card {
        background-color: #1e1e2d;
        border: 1px solid var(--primary-color);
    }
    .card-header {
        border-bottom: 1px solid var(--primary-color);
    }
</style>
}