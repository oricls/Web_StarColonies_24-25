@page
@model StarColonies.Web.Pages.Admin.Resources
@{
    ViewData["Title"] = "Ressources";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_AdminNavbar")

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="font-barlow">
            <i class="fas fa-cubes me-2"></i>Ressources
        </h1>
        <a asp-page="/Admin/AddResource" class="btn btn-accent">
            <i class="fas fa-plus me-1"></i> Ajouter
        </a>
    </div>

    @if (ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    @if (Model.AvailableResources.Any())
    {
        <div class="table-responsive shadow-sm rounded bg-dark p-4">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Icône</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resource in Model.AvailableResources)
                    {
                        <tr>
                            <td style="width: 60px;">
                                <img src="~/icons/@resource.IconUrl" alt="@resource.Name" 
                                     class="img-fluid rounded" style="width: 40px; height: 40px; object-fit: contain;" />
                            </td>
                            <td>@resource.Name</td>
                            <td>@resource.Type?.Name</td>
                            <td style="width: 150px;">
                                <form method="post" asp-page-handler="DeleteResource" asp-route-resourceId="@resource.Id" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ressource ?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt me-1"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Aucune ressource disponible pour le moment.
        </div>
    }
</div>

