@page
@using StarColonies.Web.ViewModels
@model StarColonies.Web.Pages.Profil

@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-4">
    <section class="mb-5 d-flex flex-column gap-5">
        <div class="row g-5  justify-content-center align-items-center">
            <!-- img -->
            <div class="col-lg-4 col-md-6">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <div class="teams-preview-logo me-3 d-flex align-items-center w-150">
                            <img src="" alt="Team's logo">
                        </div>
                    </div>
                </div>
            </div>

            <!-- détails profil-->
            <div class="col-lg-6 col-md-8 d-flex flex-column gap-3">
                <div class="title-page hall-of-fame">
                    <h3 class="py-3 mb-0 text-center fw-bold font-barlow login-header">PROFIL</h3>
                </div>

                <div class="card bg-dark h-100 border-0 shadow">
                    <div class="card-body d-flex flex-column gap-3">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" >Courriel*</label>
                                <input type="email" value="@Model.User.Email" class="form-control login-input" placeholder="mon@email.com" required />
                                <span  class="text-danger" asp-for="Profil.Courriel"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nom de colon*</label>
                                <input type="text" value="@Model.User.Name" class="form-control login-input" placeholder="trucmuche" required />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date de naissance*</label>
                            <input type="date" value="@Model.User.DateBirth" class="form-control login-input" placeholder="****" required />
                            <span  class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nouveau mot de passe*</label>
                                <input type="password" class="form-control login-input" placeholder="****" required />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Confirmation mot de passe*</label>
                                <input type="password" class="form-control login-input" placeholder="****" required />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <button class="btn btn-purple w-100 mt-auto font-barlow fw-bold">Enregistrer</button>
            </div>
        </div>
    </section>
</div>

