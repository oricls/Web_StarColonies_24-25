@{
    var currentPath = Context.Request.Path.Value?.ToLower();
}

<nav class="navbar navbar-expand-lg navbar-dark mb-4" style="background-color: var(--quaternary-bg-color); border-bottom: 1px solid rgba(255,255,255,0.1);">
    <div class="container">
        <span class="navbar-brand font-barlow fw-bold">Statistiques Panel</span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto">
                <li class="nav-item" >
                    <a class="nav-link @(currentPath.Contains("/ConsultStats") ? "active" : "")" asp-page="/ConsultStats">
                        <i class="fas fa-users"></i> Equipe
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentPath.Contains("/ConsultMissionStats") ? "active" : "")" asp-page="/ConsultMissionStats">
                        <i class="fas fa-bullseye"></i> Missions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentPath.Contains("/ConsultColonStats") ? "active" : "")" asp-page="/ConsultColonStats">
