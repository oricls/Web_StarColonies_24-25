@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - StarColonies</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <script src="https://kit.fontawesome.com/23635b0850.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;600;700&family=Kumbh+Sans:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="mh-100">
<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg py-2">
    <div class="container">
        @if (ViewData["HideNavButtons"] as bool? != true)
        {
            <!-- Mode normal avec logo à gauche et boutons à droite -->
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/uploads/logos/logo.png" alt="Logo Starcolonies" height="70">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Index">
                                <i class="fas fa-trophy nav-link-icon"></i>Classement
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/DashBoard">
                                <i class="fas fa-home nav-link-icon"></i>DashBoard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Comptoir">
                                <i class="fas fa-shopping-cart nav-link-icon"></i>Comptoir
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="Admin/ViewLogs">
                                    <i class="fas fa-user-shield nav-link-icon"></i>Admin
                                </a>
                            </li>
                        }
                    }
                </ul>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    var userAvatar = User.FindFirstValue("Avatar") ?? "default-avatar.png";

                    <!-- Menu utilisateur connecté -->
                    <div class="d-flex align-items-center">
                        <div class="dropdown">
                            <button class="btn btn-accent dropdown-toggle d-flex align-items-center" type="button" id="userMenu" data-bs-toggle="dropdown">
                                <img src="~/uploads/avatars/@userAvatar" class="user-avatar" alt="Avatar">
                                <span>@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-page="/Profil">
                                        <i class="fas fa-user-circle me-2"></i>Mon profil
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Settings">
                                        <i class="fas fa-cog me-2"></i>Paramètres
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-page="/Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Boutons non connecté -->
                    <div class="d-flex">
                        <a class="btn btn-outline-accent me-2" asp-page="/Login">Connexion</a>
                        <a class="btn btn-accent" asp-page="/Register">Inscription</a>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Mode authentification avec logo centré -->
            <div class="w-100 text-center">
                <a class="navbar-brand mx-auto" asp-page="/Index">
                    <img src="~/img/logo.png" alt="Logo Starcolonies" height="80">
                </a>
            </div>
        }
    </div>
</nav>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer>
    <div class="container">
        <p class="text-light small text-center">&copy; 2025 Laudrikx Games - StarColonies: The Age of Middleware</p>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
@await RenderSectionAsync("Styles", false)
</body>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation supplémentaire pour les éléments de la navbar
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.style.transition = 'all 0.3s ease';
            });

            link.addEventListener('mouseleave', function() {
                this.style.transition = 'all 0.3s ease';
            });
        });

        // Animation pour le dropdown utilisateur
        const userDropdown = document.querySelector('.dropdown');
        if (userDropdown) {
            userDropdown.addEventListener('mouseenter', function() {
                this.querySelector('.dropdown-toggle').style.transform = 'translateY(-2px)';
            });

            userDropdown.addEventListener('mouseleave', function() {
                this.querySelector('.dropdown-toggle').style.transform = 'translateY(0)';
            });
        }
    });
</script>
</html>