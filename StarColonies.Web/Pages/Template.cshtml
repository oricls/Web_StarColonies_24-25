@page
@model StarColonies.Web.Pages.Template

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>starcolonies</title>
    <link rel="stylesheet" href="css/site.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;600;700&family=Kumbh+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        @*A METTRE DANS LA LAYOUT APRES EVIDEMMENT MAIS JE TESTAIS*@
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'barlow-condensed': ['"Barlow Condensed"', 'sans-serif'],
                        'kumbh': ['"Kumbh Sans"', 'sans-serif'],
                    },
                    colors: {
                        'primary-bg': 'var(--primary-bg-color)',
                        'secondary-bg': 'var(--secondary-bg-color)',
                        'tercary-bg' : 'var(--tercary-bg-color)',
                        'accent': 'var(--accent-color)',
                        'primary': 'var(--primary-color)',
                        'text': 'var(--text-color)',
                        'button': 'var(--special-color)',
                    },
                }
            }
        }
    
    </script>
</head>
<body>
<!-- Navigation Bar -->
<nav class="container mx-auto px-6 py-6 flex justify-between items-center">
    <div class="mr-4">
        <img src="img/logo.png" alt="Logo Starcolonies" class="h-20">
    </div>
    <div class="flex space-x-4">
        <button class="border border-accent text-text rounded-md px-6 py-2 hover:opacity-75 transition" href="/Login">Connexion</button>
        <button class="bg-accent text-text rounded-md px-6 py-2 hover:opacity-75 transition">Inscription</button>
    </div>
</nav>

<!-- Hero Section -->
<section class="container mx-auto px-4 py-16 text-center">
    <h2 class="text-6xl font-barlow-condensed font-bold mb-8">Bienvenue sur Novaterra</h2>
    <p class="text-lg max-w-2xl mx-auto mb-10">
        Explorez les confins de l'espace, établissez votre colonie et affrontez des dangers inconnus dans ce jeu de stratégie et d'aventure futuriste.
    </p>
    <div class="relative inline-block btn-glow-wrapper">
        <button class="bg-button text-2xl text-gray-900 font-bold rounded-md px-8 py-3 transition transform hover:scale-105 relative z-10">
            Commencer l'aventure
        </button>
    </div>
</section>

