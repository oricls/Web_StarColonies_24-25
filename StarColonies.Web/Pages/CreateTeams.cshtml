@page
@model StarColonies.Web.Pages.CreateTeams

@{
    ViewData["Title"] = "CreateTeam";
    ViewData["HideNavButtons"] = true;
}

<div class="container mt-4">
    <section class="mb-5 d-flex flex-column gap-5">
        <h2 class="font-barlow fw-bold text-center">Créer une nouvelle équipe</h2>

        <!-- Création d'une équipe-->
        <div class="row g-5  justify-content-center align-items-center">
            
            <!-- détail equipe-->
            <div class="col-lg-4 col-md-6">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <div class="teams-preview-logo me-3 d-flex align-items-center w-150">
                            <img src="" alt="Team's logo">
                        </div>
                    </div>

                    <form method="post">
                        <div class="mb-4  d-flex flex-column gap-5">
                            <div class="d-flex flex-column">
                                <label class="form-label mb- text-secondary">Nom de l'équipe*</label>
                                <input asp-for="TeamName" class="form-control login-input" placeholder="Ma super équipe"/>
                            </div>
                            <button type="submit" class="btn btn-purple w-100 mt-auto font-barlow fw-bold">CREER L'EQUIPE</button>
                        </div>
                    </form>
                    
                    <div class="alert-message alert alert-danger d-inline-block mt-3 px-3 py-2" role="alert">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Au moins un medecin, un soldat et un scientifique. 
                        Maximum deux membres de la même profession
                    </div>
                </div>
            </div>

            <!--membre equipe-->
            <div class="col-lg-4 col-md-6 d-flex flex-column gap-3">
                <div class="login-container hall-of-fame">
                    <h3 class="py-3 mb-0 text-center fw-bold font-barlow login-header">MEMBRES</h3>
                </div>

                <div class="card bg-dark h-100 border-0 shadow">
                    <div class="card-body d-flex flex-column">
                        <div class="card-body d-flex flex-row">

                            <div class="d-flex justify-content-center align-items-center mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <img src="https://picsum.photos/seed/team1/50" alt="User profil" class="img-fluid rounded-circle">
                                    <div class="d-flex flex-column">
                                        <p class="mb-0 fw-bold text-light">Vous</p>
                                        <p class="mb-0 text-secondary">Soldat</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- utilisateur -->
                        <div class="card-body d-flex justify-content-between align-items-center px-3 py-2">
                            <div class="d-flex flex-column align-items-center">
                                <div class="stat-card d-flex align-items-center gap-2">
                                    <i class="fa fa-star" style="color: var(--accent-color)"></i>
                                    <span class="fw-bold text-light">2</span>
                                </div>
                                <span class="text-secondary">Niveau</span>
                            </div>

                            <div class="d-flex flex-column align-items-center">
                                <div class="stat-card d-flex align-items-center gap-2">
                                    <i class="fa fa-heart" style="color: var(--accent-color)"></i>
                                    <span class="fw-bold text-light">2</span>
                                </div>
                                <span class="text-secondary">Endurence</span>
                            </div>

                            <div class="d-flex flex-column  align-items-center">
                                <div class="stat-card d-flex align-items-center gap-2">
                                    <i class="fa fa-hand-fist" style="color: var(--accent-color)"></i>
                                    <span class="fw-bold text-light">2</span>
                                </div>
                                <span class="text-secondary">Force</span>
                            </div>
                        </div>

                    </div>
                </div>


                <div class="card bg-dark h-100 border-0 shadow">
                    <div class="card-body d-flex flex-column">
                        <div class="card-body d-flex flex-row">

                            <div class="d-flex justify-content-center align-items-center mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <img src="https://picsum.photos/seed/team1/50" alt="User profil" class="img-fluid rounded-circle">
                                    <div class="d-flex flex-column">
                                        <p class="mb-0 fw-bold text-light">Vous</p>
                                        <p class="mb-0 text-secondary">Soldat</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- utilisateur -->
                        <div class="card-body d-flex justify-content-between align-items-center px-3 py-2">
                            <div class="d-flex flex-column  align-items-center">
                                <div class="stat-card d-flex align-items-center gap-2">
                                    <i class="fa fa-star" style="color: var(--accent-color)"></i>
                                    <span class="fw-bold text-light">2</span>
                                </div>
                                <span class="text-secondary">Niveau</span>
                            </div>

                            <div class="d-flex flex-column align-items-center">
                                <div class="stat-card d-flex align-items-center gap-2">
                                    <i class="fa fa-heart" style="color: var(--accent-color)"></i>
                                    <span class="fw-bold text-light">2</span>
                                </div>
                                <span class="text-secondary">Endurence</span>
                            </div>

                            <div class="d-flex flex-column align-items-center">
                                <div class="stat-card d-flex align-items-center gap-2">
                                    <i class="fa fa-hand-fist" style="color: var(--accent-color)"></i>
                                    <span class="fw-bold text-light">2</span>
                                </div>
                                <span class="text-secondary">Force</span>
                            </div>
                        </div>

                    </div>
                </div>


                <button class="btn btn-purple w-100 mt-auto font-barlow fw-bold">Ajouter un membre</button>

            </div>
        </div>
    </section>
</div>